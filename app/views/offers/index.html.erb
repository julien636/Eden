<div>
    <h1 class="heading-6">Bienvenue sur Eden </h1>
</div>
<br/><br/><br/>

   
<div class="container w-container">
  
    <div class="tabs">
      <ul>
        <li class="tablinks is-active" onclick="openTab(event, 'légumes')
        "><a>Légumes</a></li>
        <li class="tablinks" onclick="openTab(event, 'légumineuses')
        "><a>Légumineuses</a></li>
        <li class="tablinks" onclick="openTab(event, 'céréales')
        "><a>Céréales</a></li>
        <li class="tablinks" onclick="openTab(event, 'fruits')
        "><a>Fruits</a></li>
      </ul>
    </div>
   <br/>


    <div id="légumes" class="columns w-row tabcontent">
      <%= form_tag(fetch_offers_path(format: :js),:method => :get ,:remote => true) do %>
        <%= select_tag "category", options_from_collection_for_select(@sub_vegetables, "id", "prod_name"),  { :include_blank => true , :class => "product_select"} %>
        <%= submit_tag 'Filter' %>
      <% end %> <br/>

      <%= render partial: 'vegetables_list' %>  
    </div>

    <div id="légumineuses" class="columns w-row tabcontent">
