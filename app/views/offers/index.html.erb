        <%= submit_tag 'Filter' %>
      <% end %> <br/>

       <%= render partial: 'cereals_list' %>

    </div>

    <div id="fruits" class="columns w-row tabcontent">
      <%= form_tag(fetch_offers_path(format: :js),:method => :get ,:remote => true) do %>
        <%= select_tag "category", options_from_collection_for_select(@sub_fruits, "id", "prod_name"),  { :include_blank => true , :class => "product_select"} %>
        <%= submit_tag 'Filter' %>
      <% end %> <br/>

      <%= render partial: 'fruits_list' %> 
    </div>


</div>

 
