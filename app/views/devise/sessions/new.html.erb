<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: "form" } do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>
        <%= devise_error_messages! %>

        <div class="field">
        <%= f.label :email, "Email" %>

        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>

        </div>

        <div class="field">
        <%= f.label :mot_de_passe %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
      </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :enregistrer %>
          </div>
        <% end %>
        
        <div class="actions mt-5">
          <%= f.submit "Connexion", class: "button small w-button" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

